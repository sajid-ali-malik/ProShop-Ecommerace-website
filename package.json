{
  "name": "proshop-ecommerace-site",
  "version": "1.0.0",
  "description": "Ecommerace site built with MERN stack",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node backend/server.js",
    "server": "nodemon backend/server.js",
    "client": "npm run dev --prefix frontend",
    "data:import": "node backend/seeder.js",
    "data:destroy": "node backend/seeder.js -destroy",
    "dev": "concurrently \"npm run server\" \"npm run client\""
  },
  "author": "Sajid Ali",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "colors": "^1.4.0",
    "express": "^4.18.2",
    "mongoose": "^7.5.2"
  },
  "devDependencies": {
    "concurrently": "^8.2.1",
    "dotenv": "^16.3.1",
    "nodemon": "^3.0.1"
  }
}
